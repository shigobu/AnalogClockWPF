        <Line Name="clockLine27"/>
        <Line Name="clockLine28"/>
        <Line Name="clockLine29"/>
        <Line Name="clockLine30"/>
        <Line Name="clockLine31"/>
        <Line Name="clockLine32"/>
        <Line Name="clockLine33"/>
        <Line Name="clockLine34"/>
