<Window x:Class="アナログ時計WPF.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:アナログ時計WPF"
        mc:Ignorable="d"
        Title="設定" Width="200" WindowStyle="ToolWindow" ShowInTaskbar="False" WindowStartupLocation="CenterOwner"
        SizeToContent="Height" ResizeMode="NoResize">
    <Window.Resources>
        <local:DoubleToIntConverter x:Key="DoubleToInt" />
    </Window.Resources>
    <StackPanel Margin="6">
        <DockPanel>
            <TextBox Name="textBox1" DockPanel.Dock="Right" Width="70" Margin="3" Text="{Binding ElementName=slider1, Path=Value, Converter={StaticResource DoubleToInt}}" TextAlignment="Right"/>
            <TextBlock Text="真円" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="3"/>
        </DockPanel>
        <Slider Name="slider1" Margin="3" Maximum="1000" Minimum="50" SmallChange="5" LargeChange="50" TickPlacement="BottomRight" TickFrequency="50"/>
    </StackPanel>
</Window>
